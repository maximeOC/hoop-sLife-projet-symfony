{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="container mb-5">
            <h1>Inscription</h1>
        <section class="formulaire">
            {{ form_start(registrationForm) }}
            <fieldset class="mb-3" >
                <legend>Veuillez renseigner vos coordonn√©es</legend>
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.lastname) }}
                {{ form_row(registrationForm.firstname) }}
                {{ form_row(registrationForm.address) }}
                {{ form_row(registrationForm.city) }}
                {{ form_row(registrationForm.zipcode) }}
                <p> * Veuillez renseigner tous les champs</p>
            </fieldset>
            {{ form_row(registrationForm.plainPassword, {
                label: 'Mot de passe'
            }) }}
            {{ form_row(registrationForm.RGPD) }}
            <div class="actionRegister">
                <a href="{{ path('app_login') }}">Deja inscrit ? Veuillez vous connecter</a>
                <button type="submit" class="bouton">Inscription</button>
                {{ form_end(registrationForm) }}
            </div>
        </section>

    </div>
{% endblock %}
