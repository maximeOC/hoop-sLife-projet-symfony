{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
    <div class="container">
        <div class="row"><h1>Panier</h1></div>
    </div>
    
    <table class="table">
        <thead>
            <tr>
                <th>Produit</th>
                <th>Prix</th>
                <th>Quantité</th>
                <th>Total</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for data in dataCart %}
                <tr>
                    <td>{{ data.product.slug }}</td>
                    <td>{{ data.product.price }} €</td>
                    <td>{{ data.quantity }}</td>
                    <td>{{ data.quantity * data.product.price }} €</td>
                    <td>
                        <a href="{{ path('cart_add', {id: data.product.id}) }}" class="cart-add">Ajouter</a>
                        <a href="" class="cart-delete">Supprimer 1 articles</a>
                        <a href="" class="cart-delete">Supprimer tous les articles </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center">Votre panier est vide</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
