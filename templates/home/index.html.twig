{% extends 'base.html.twig' %}

{% block body %}
    <main class="home-container">
        <div class="datePlayoff">
            <p class="temps">Temps restant avant les playoffs de <strong> NBA </strong> </p>
            <div class="playoffTime">
                <div class="days playoffs">
                    <div class="number" id="days">0</div>
                    <p class="days__days">Days</p>
                </div>
                <div class="hours playoffs">
                    <div class="number" id="hours">0</div>
                    <p class="hours__days">hours</p>
                </div>
                <div class="minutes playoffs">
                    <div class="number" id="mins">0</div>
                    <p class="minutes__days">minutes</p>
                </div>
                <div class="seconds playoffs">
                    <div class="number" id="seconds">0</div>
                    <p class="seconds__days">seconds</p>
                </div>
            </div>
        </div>
        <section class="home-section container">

            <div class="l-container">
                {% for cate in mainCategories %}
                <div class="b-game-card">
                        <div class="b-game-card_cover">
                            <h3>{{ cate.name }}</h3>
                            <a href="{{ path('app_categories_index', {main_id: cate.id}) }}">Voir les cat√©gories de {{cate.name}} </a>
                        </div>
                </div>
                {% endfor %}
            </div>
        </section>

        <section class="SectionTeams my-5 container">
            {% for team in teams %}
                <a href="{{ path('app_teams_index', {id: team.id}) }} " class="my-3">
                    <div class="SectionTeams-team">
                        <img class="teamImages" src="{{ asset('build/images/teams/') ~ team.image}}" alt="{{ team.alt }}">
                    </div>
                </a>
            {% endfor %}
        </section>

        <section class="articles container col-12 text-center">
            <h2 class="mb-5"> Matchs historiques entre les <strong> Altanta hawks</strong> et les <strong>Boston Celtics</strong></h2>
            <div id="games" class="games">
            </div>
        </section>
    </main>
{% endblock %}
